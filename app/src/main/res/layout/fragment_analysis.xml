<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.account.AnalysisFragment">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_analysis"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="←返回"
                    android:clickable="true"
                    android:textColor="#fff"
                    android:layout_marginTop="13dp"
                    android:textSize="20sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="月账单↓"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-16dp"
                    android:clickable="true"
                    android:textColor="#fff"
                    android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/analysis_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:textStyle="bold"
            android:text="2018-07"/>

        <!--点击这个红色的按键可以定位到具体某个月份，这个功能需要实现-->
        <ImageButton
            android:id="@+id/analysis_calendar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            />

    </LinearLayout>

  <LinearLayout
      android:layout_marginTop="96dp"
      android:layout_marginLeft="10dp"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">


      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:textColor="#fff"
              android:textStyle="bold"
              android:text="消费"/>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="18sp"
              android:clickable="true"
              android:layout_marginLeft="6dp"
              android:textColor="@color/mistyrose"
              android:textStyle="bold"
              android:text="(✪)"/>

      </LinearLayout>


      <TextView
          android:layout_height="wrap_content"
          android:layout_width="wrap_content"
          android:textSize="20dp"
          android:text="放置饼状图"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:textColor="#fff"
          android:textStyle="bold"
          android:text="单笔最贵"/>

      <!--这下面的数据都是需要数据处理排序后展示的，UI部分不难，不再重复-->

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:textColor="#fff"
          android:textStyle="bold"
          android:text="贴心建议"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:textColor="#000"
          android:text="1.请减少垃圾食品的购买量"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="18sp"
          android:textColor="#fff"
          android:textStyle="bold"
          android:text="推荐商品"/>

      <!--这下面的参考detail页面的recyclerView页面的实现-->

  </LinearLayout>
</FrameLayout>
