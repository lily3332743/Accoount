<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/floralwhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.account.click_detail_itemFragment">

    <!--当点击明细页面中的item会跳转到这个fragment，布局写好了但是不知道怎么实现？？？-->
    <!-- TODO: Update blank fragment layout -->
   <TextView
       android:id="@+id/back"
        android:paddingLeft="10dp"
        android:layout_marginTop="17dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:textColor="#000"
        android:textSize="20sp"
        android:text="←返回"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/detail_item_image"
        android:src="@drawable/nav_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="24sp"
        android:text="冰红茶"/>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:text="类型"/>

                <TextView
                    android:id="@+id/click_detail_item_type"
                    android:paddingLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="30sp"
                    android:text="饮食"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="金额"/>

        <TextView
            android:id="@+id/click_detail_item_price"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="-3.00"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="日期"/>

        <TextView
            android:id="@+id/click_detail_item_date"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="2018-09-07"/>
    </LinearLayout>

    <LinearLayout
        android:paddingLeft="20dp"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="备注"/>

        <TextView
            android:id="@+id/click_detail_item_beizhu"
            android:paddingLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:textSize="30sp"
            android:text="无"/>
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
       <Button
           android:background="#fff"
           android:id="@+id/click_detail_item_edit"
           android:layout_width="0dp"
           android:layout_height="40dp"
           android:layout_weight="1"
           android:textSize="22sp"
           android:text="编辑"
           android:textColor="#000"/>
        <View
            android:background="#000"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
           />

        <Button
            android:id="@+id/click_detail_item_delete"
            android:background="#fff"
            android:layout_width="0dp"
            android:textSize="22sp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="删除"
            android:textColor="#000"/>
    </LinearLayout>




</LinearLayout>
